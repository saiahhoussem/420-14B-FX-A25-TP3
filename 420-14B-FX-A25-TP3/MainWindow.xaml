<Window x:Class="_420_14B_FX_A25_TP3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_420_14B_FX_A25_TP3"
        mc:Ignorable="d"
        Title="Billeterie" Height="700" Width="1020"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">

        <!-- Titre principal -->
        <TextBlock Text="Billetterie d'Événements"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#4169e1" Margin="10"
                   HorizontalAlignment="Center"
                   />

       

                <StackPanel Orientation="Horizontal" Margin="10">

                    <!-- SECTION ÉVÉNEMENTS -->
                    <StackPanel Margin="5">
                        <TextBlock Text="Événements" FontWeight="Bold" Foreground="#4169e1" FontSize="20"/>

                        <!-- Barre d’outils -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <Button x:Name="btnAjouterEvenement" Background="White" BorderThickness="0" Click="btnAjouterEvenement_Click">
                                <Image Source="/Resources/new.png" Width="25" Margin="5"/>
                            </Button>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnSupprimerEvenement" Background="White" BorderThickness="0"/>
                        <TextBox x:Name="txtRechercheEvenement" Width="250" Height="25" Margin="10,0,0,0"></TextBox>
                        <ComboBox Name="cbTypeEvenements" Width="150" Height="25" Margin="5,0"></ComboBox>
                    </StackPanel>
                        
                                    
                            <Button x:Name="btnRechercheEvenement" Background="White" BorderThickness="0" Click="btnRechercheEvenement_Click">
                                <Image Source="/Resources/search.png" Width="25" Margin="5"/>
                            </Button>
                        </StackPanel>

                        <!-- Liste des événements sous forme de vignettes -->
                        <Border Width="550" Height="450" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                            <ScrollViewer>
                                <WrapPanel x:Name="wpEvenements" Orientation="Horizontal" Margin="10"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>

                    <!-- SECTION FACTURE -->
                    <StackPanel Margin="5,50">
                        <TextBlock Text="Facture en cours" FontWeight="Bold" Foreground="#4169e1" FontSize="20"/>
                        <Border Width="380" Height="450" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                            <StackPanel Margin="5">

                                <!-- Info facture -->
                                <TextBlock x:Name="lblDateFacture" Text="Date : " Margin="5"/>

                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBox x:Name="txtNoFacture" Width="200" Height="25"/>
                                    <Button x:Name="btnRechercheFacture" Background="White" BorderThickness="0" Click="btnRechercheFacture_Click">
                                        <Image Source="/Resources/search.png" Width="25" Margin="5"/>
                                    </Button>
                                </StackPanel>

                                <!-- Liste billets (items de la facture) -->
                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Height="250" Margin="5">
                                    <ListView x:Name="lvFacture" HorizontalContentAlignment="Stretch">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Border>

                                <!-- Totaux -->
                                <StackPanel Margin="5" HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Sous-total :" Margin="5,0"/>
                                        <TextBlock x:Name="lblSousTotal" Width="100" TextAlignment="Right"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="TPS :" Margin="5,0"/>
                                        <TextBlock x:Name="lblTPS" Width="100" TextAlignment="Right"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="TVQ :" Margin="5,0"/>
                                        <TextBlock x:Name="lblTVQ" Width="100" TextAlignment="Right"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Total :" FontWeight="Bold" Margin="5,0"/>
                                        <TextBlock x:Name="lblTotal" Width="100" TextAlignment="Right" FontWeight="Bold"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <Button x:Name="btnNouvelleFacture" Background="White" BorderThickness="0" Click="btnNouvelleFacture_Click">
                                <Image Source="/Resources/new.png" Width="25" Margin="5"/>
                            </Button>
                            <Button x:Name="btnPayer" Content="Payer" Background="#4169e1" Foreground="White"
                                    Width="80" Margin="5" Click="btnPayer_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
           

         

    
    </StackPanel>
</Window>
