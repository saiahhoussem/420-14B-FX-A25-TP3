<Window x:Class="_420_14B_FX_A25_TP3.FormEvenement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Gestion d'un événement"
        Height="490" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="10">
        <!-- Conteneur horizontal principal : champs à gauche / image à droite -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">

            <!-- ============================
                 SECTION GAUCHE : FORMULAIRE
                 ============================ -->
            <StackPanel Width="420" Margin="0,0,10,0">

                <!-- Titre -->
                <TextBlock x:Name="lblTitre"
                           Text="Information de événement"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4169e1"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <!-- Nom -->
                <StackPanel Margin="0,5">
                    <TextBlock Text="Nom de l'événement :" />
                    <TextBox x:Name="txtNom" Height="25" />
                </StackPanel>

                <!-- Type -->
                <StackPanel Margin="0,5">
                    <TextBlock Text="Type d'événement :" />
                    <ComboBox x:Name="cboType" Height="25" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
>
                    <!-- Date -->
                    <StackPanel Margin="0,5">
                        <TextBlock Text="Date :" />
                        <DatePicker x:Name="dpDate" Height="25" Width="160" HorizontalAlignment="Left" />
                    </StackPanel>
                    <StackPanel Margin="5,5">
                        <TextBlock Text="Heure :" />
                        <xctk:TimePicker x:Name="tpHeure"
                                         Format="Custom"
                                         FormatString="HH:mm"
                                         Width="100"
                                         Margin="0,0,0,0"
                                         Height="25"/>
                    </StackPanel>

                </StackPanel>              
               
                <!-- Prix -->
                <StackPanel Margin="0,5">
                    <TextBlock Text="Prix ($) :" />
                    <TextBox x:Name="txtPrix" Height="25" />
                </StackPanel>

                <!-- Nombre de places -->
                <StackPanel Margin="0,5">
                    <TextBlock Text="Nombre de places :" />
                    <TextBox x:Name="txtNbPlaces" Height="25" />
                </StackPanel>

                <!-- Image -->
                <StackPanel Margin="0,10">
                    <TextBlock Text="Image associée :" />
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBox x:Name="txtImage" Width="250" IsReadOnly="True" />
                        <Button x:Name="btnParcourir" Content="Parcourir" Width="100" Margin="5,0" Click="btnParcourir_Click" />
                    </StackPanel>
                </StackPanel>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="btnAction" Content="Action" Width="100" Background="#4169e1" Foreground="White" Margin="5" Click="btnAction_Click"/>
                    <Button x:Name="btnAnnuler" Content="Annuler" Width="100" Background="#4169e1" Foreground="White" Margin="5" Click="btnAnnuler_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- ============================
                 SECTION DROITE : APERÇU IMAGE
                 ============================ -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40">
                <TextBlock Text="Aperçu de l'image"  HorizontalAlignment="Center" />
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                    <Image x:Name="imgApercu" Width="250" Height="250" Stretch="UniformToFill" Margin="5"/>
                </Border>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
